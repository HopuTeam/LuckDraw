
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html>
<head>
    <title>抽奖——抽奖项目</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*  *@


</head>
<body>
    <div class="container">
        <h2>抽抽奖</h2>
        <hr />       
        <div class="row" style="margin-top:20px;">
            <div class="col-md-4">
                <form action="/luck/index" method="post">
                    <input name="__RequestVerificationToken" type="hidden" value="" />
                    <div class="form-horizontal">
                        <h4 onclick="{ $('#add-form').slideToggle(250); }" style="cursor:pointer;color:rgb(71, 71, 183);">点击这里添加抽奖项目</h4>
                        <hr />
                        <div id="add-form" style="display:none;">
                            <div class="form-group">
                                <label>名称</label>
                                <div class="col-md-10">
                                    <input class="form-control text-box single-line" data-val="true" id="Name" name="Name" type="text" value="" />
                                </div>
                            </div>

                            <div class="form-group">
                                <label>类型</label>
                                <div class="col-md-10">
                                    <select class="form-control" id="LuckType" name="LuckType">
                                        <option value="0">重复利用奖项抽取</option>
                                        <option value="1">每次抽取完成后排除奖项</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="button" value="添加项目" onclick="add()" class="btn btn-default" />
                                    <input type="button" value="取消" onclick="{ $('#add-form').slideToggle(250); }" class="btn btn-default" />
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                </form>
            </div>
            
        </div>

    </div>


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Scripts/copyright.js"></script>



    <script>
        function add() {
            var paras = {
                LuckType: $('#LuckType').val(),
                Name: $('#Name').val()
            }
            var win = layer.load();
            $.post('/Draw/add', paras, (res) => {
                layer.close(win);
                if (res.succ)
                    window.location.reload();
                else
                    layer.msg(res.msg);
            })
        }

        function del(id) {
            var paras = {
                id: id
            }
            layer.confirm('确认删除此项目吗？', {
                btn: ['确定', '取消']
            }, function () {
                var win = layer.load();
                $.post('/luck/del', paras, (res) => {
                    layer.close(win);
                    if (res.succ)
                        window.location.reload();
                    else
                        layer.msg(res.msg);
                })
            }, function () {

            });
        }
    </script>








</body>
</html>
