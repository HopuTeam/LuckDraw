@model List<LuckDraw.Models.LuckDraw>
@{
    ViewData["Title"] = "NonLucky";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var tit = ViewData["tit"] as LuckDraw.Models.Draw;
}
<fieldset class="layui-elem-field layui-field-title">
    <legend>@tit.Name</legend>
</fieldset>
@*<h2>@Model.FirstOrDefault().Draw.Name</h2>*@
<hr />
<div>
    <h3>待抽奖项</h3>
    <div>
        @foreach (var item in Model)
        {
            if (item.EntryTime == null)
            { 
            <button class="btn btn-light" onclick="ID(@item.ID)">@item.Luck.Name</button>
            }
        }
    </div>
    <button type="button" class="btn btn-link">抽取幸运观众</button>

    <div>
        @foreach (var item in Model)
        {
            if (item.EntryTime != null)
            {
        <button class="btn btn-danger" onclick="ID(@item.ID)">@item.Luck.Name</button>
            }
        }
    </div>
</div>
<div>

</div>

@section scripts{

    @*<script src="~/Scripts/jquery-3.5.1.min.js"></script>*@
    <script>

        $(".btn-link").click(function () {
            $.get("/Play/NonLucky", {}, function (Msg) {
                alert(Msg);
                window.location.reload()  //刷新页面
            })
        })


        function ID(id) {
            var data = {
              ID: id,
            };
            $.get("/Play/TwoEide", data, function (Msg) {
                alert(Msg);
                window.location.reload()  //刷新页面
            })
      }

    </script>
}
